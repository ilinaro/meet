FROM node:20.12.1-alpine as build

WORKDIR /app

COPY package*.json ./
RUN npm ci
COPY . .
ARG PORT
ENV PORT=$PORT
ARG ROUTER_API
ENV ROUTER_API=$ROUTER_API
ARG JWT_ACCESS_SECRET_KEY
ENV JWT_ACCESS_SECRET_KEY=$JWT_ACCESS_SECRET_KEY
ARG JWT_REFRESH_SECRET_KEY
ENV JWT_REFRESH_SECRET_KEY=$JWT_REFRESH_SECRET_KEY
ARG DB_URL
ENV DB_URL=$DB_URL
ARG CLIENT_URL
ENV CLIENT_URL=$CLIENT_URL
ARG SMTP_HOST
ENV SMTP_HOST=$SMTP_HOST
ARG SMTP_PORT
ENV SMTP_PORT=$SMTP_PORT
ARG SMTP_USER
ENV SMTP_USER=$SMTP_USER
ARG SMTP_PASSWORD
ENV SMTP_PASSWORD=$SMTP_PASSWORD
ARG API_URL
ENV API_URL=$API_URL
RUN npm run build

FROM node:20.12.1-alpine

WORKDIR /app

COPY --from=build /app/package*.json ./
RUN npm ci --only=production
COPY --from=build /app/dist ./dist

EXPOSE ${PORT}

CMD ["node", "dist/index.js"]